<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.amomosy.myapplication.MainActivity"
    android:background="@color/black"


    >
    <ImageView
        android:id="@+id/image"
        android:layout_width="24dp"
        android:layout_height="30dp"
        android:src="@drawable/alarm"
        android:layout_marginLeft="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"

        />
    <TextView
        android:id="@+id/txt11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="40dp"
        android:text="11"
        android:fontFamily="@font/digital7"
        android:layout_toRightOf="@+id/image"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="2dp"

        />

    <TextView
        android:id="@+id/txt2noghte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="40dp"
        android:text=":"
        android:fontFamily="@font/digital7"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/txt11"

        />

    <TextView
        android:id="@+id/txt08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="40dp"
        android:text="08"
        android:fontFamily="@font/digital7"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/txt2noghte"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/txtpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="40dp"
        android:text="pm"
        android:fontFamily="@font/digital7"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/txt08"
        android:layout_marginTop="50dp"

        />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/digital7"
        android:text="3"
        android:textColor="@color/blue"
        android:textSize="140dp"
        android:layout_below="@+id/image"

        />
    <TextView
        android:id="@+id/txt52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/digital7"
        android:text="52"
        android:textColor="@color/blue"
        android:textSize="140dp"
        android:layout_toRightOf="@+id/txt3"
        android:layout_below="@id/txt11"

        />
    <TextView
        android:id="@+id/txt2pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/digital7"
        android:text="pm"
        android:textColor="@color/blue"
        android:textSize="40dp"
        android:layout_toRightOf="@+id/txt52"
        android:layout_marginTop="90dp"


        />
    <TextView
        android:id="@+id/txt46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="2"
        android:fontFamily="@font/digital7"
        android:text="46"
        android:textColor="@color/blue"
        android:textSize="40dp"
        android:layout_toRightOf="@+id/txt52"
        android:layout_below="@+id/txt2pm"
        android:layout_marginTop="40dp"


        />
    <TextView
        android:id="@+id/txt15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="40dp"
        android:text="15"
        android:fontFamily="@font/digital7"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txt3"

        />
    <TextView
        android:id="@+id/txtnov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="40dp"
        android:text="NOV"
        android:fontFamily="@font/digital7"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/txt15"
        android:layout_below="@id/txt52"

        />
    <TextView
        android:id="@+id/txt2015"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="40dp"
        android:text="2015"
        android:fontFamily="@font/digital7"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/txtnov"
        android:layout_below="@id/txt52"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="40dp"
        android:text="SUN"
        android:fontFamily="@font/digital7"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/txt2015"
        android:layout_below="@id/txt52"

        />
    <Button
        android:id="@+id/btn_showTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2015"
        android:text="Show Time"
        android:textColor="@color/blue"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:layout_centerInParent="true"
        android:textSize="25dp"

        />




</RelativeLayout>


